<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/red_path"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/timeline_iv_logo"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:scaleType="fitXY"
            android:src="@drawable/path_logo" />

        <ImageView
            android:id="@+id/timeline_iv_search"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:layout_toLeftOf="@+id/timeline_iv_friends"
            android:scaleType="fitXY"
            android:src="@drawable/timeline_button_search" />

        <ImageView
            android:id="@id/timeline_iv_friends"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:layout_toLeftOf="@+id/timeline_iv_notifications"
            android:scaleType="fitXY"
            android:src="@drawable/people_button" />

        <ImageView
            android:id="@id/timeline_iv_notifications"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/3_button" />
    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:background="#000000">
        
    </RelativeLayout>
</LinearLayout>